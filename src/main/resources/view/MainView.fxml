<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="500.0" minWidth="500.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainView">
	<children>
		<fx:include source="menu/MenuView.fxml" />
		<HBox alignment="CENTER" cacheShape="false" centerShape="false" scaleShape="false" spacing="20.0" VBox.vgrow="ALWAYS">
			<children>
				<AnchorPane minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="SOMETIMES">
					<children>
						<fx:include source="gameoptions/GameOptionsView.fxml" />
					</children>
				</AnchorPane>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
            		<Label fx:id="labelTitle">
            			<font>
            				<Font name="System Bold" size="25.0" />
            			</font>
            		</Label>
                  <fx:include source="grids/GridView.fxml" />
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="row:" />
                        <Label fx:id="labelRow" />
                        <Label text="column:" />
                        <Label fx:id="labelColumn" />
                        <Label text="id:" />
                        <Label fx:id="labelID" />
                     </children>
                  </HBox>
            		<fx:include source="menu/ProgressView.fxml" />
               </children>
            </VBox>
			</children>
         <padding>
            <Insets right="20.0" />
         </padding>
		</HBox>
	</children>
</VBox>
